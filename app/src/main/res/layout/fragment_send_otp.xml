<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".send_otp"
    android:fitsSystemWindows="true"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/textforgotpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="পাসওয়ার্ড পুনরুদ্ধার করুন?"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#494949"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kalpurush"
                    />


                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/undraw_secure_login_m11a"
                    android:layout_below="@id/textforgotpass"
                    />



                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ভেরিফিকেশন কোড পাঠাতে আপনার ইমেইল ঠিকানা প্রয়োজন।"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/kalpurush"
                    android:layout_below="@id/imageview"
                    android:textColor="#504F4F"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="আপনার ইমেইল দিন?"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/baseline_email_24"
                    android:layout_below="@id/text"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/kalpurush"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/send_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP পাঠান?"
                    app:cornerRadius="0dp"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/main_color"
                    android:layout_below="@id/textinput"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/kalpurush"
                    />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_below="@id/textinput"
                    android:layout_marginTop="30dp"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>