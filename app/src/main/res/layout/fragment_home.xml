<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">






    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/man"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="হ্যালো আব্দুল আহাদ।"
                        android:fontFamily="@font/kalpurush"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            android:padding="3dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ব্যালেন্স"
                                    android:fontFamily="@font/kalpurush"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    android:textSize="15dp"
                                    android:gravity="center"
                                    android:background="@color/main_color"
                                    />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="১০০০"
                            android:fontFamily="@font/kalpurush"
                            android:textColor="#474646"
                            android:textStyle="normal"
                            android:textSize="15dp"
                            android:gravity="center"
                            />

                    </RelativeLayout>






                </LinearLayout>

                <LinearLayout
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                </LinearLayout>








            </LinearLayout>





            <androidx.appcompat.widget.SearchView
                android:layout_marginTop="10dp"
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bg"
                android:visibility="visible"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"
                app:queryHint="সার্ভিস খুজুন" />


            <androidx.cardview.widget.CardView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/banner_bg"
                >

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:iss_auto_cycle="true"
                app:iss_delay="1000"
                app:iss_period="3000"
                app:iss_text_align="CENTER" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:shimmer_auto_start="true"
                app:shimmer_duration="1500">

                <!-- Dummy tabs (just placeholder views) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/shimmer_item_bg"/>

                    <View
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/shimmer_item_bg"/>

                    <View
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/shimmer_item_bg"/>

                    <View
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/shimmer_item_bg"/>

                    <View
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/shimmer_item_bg"/>

                    <View
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/shimmer_item_bg"/>

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Category Tabs -->
            <com.google.android.material.tabs.TabLayout
                android:layout_marginTop="10dp"
                android:id="@+id/tabLayout"
                app:tabPaddingStart="16dp"
                app:tabPaddingEnd="16dp"
                app:tabPaddingTop="8dp"
                app:tabPaddingBottom="8dp"
                app:tabRippleColor="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/tab_bg_selector"
                app:tabGravity="start"
                app:tabIndicatorHeight="0dp"
                app:tabMode="scrollable"
                app:tabTextColor="@color/tab_text_color" />

            <!-- Fragment container -->
            <FrameLayout
                android:id="@+id/serviceFragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>