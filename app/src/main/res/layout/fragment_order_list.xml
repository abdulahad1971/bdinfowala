<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.orders.OrderListFragment">



    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="6dp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">



            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="অনলাইনে মনোনয়নপত্র দাখিল"
                android:fontFamily="@font/kalpurush"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"/>





            <!-- Top Row: Product Name + Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">




                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/orderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="২৪ আগস্ট ২০২৫"
                    android:fontFamily="@font/kalpurush"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:textAlignment="textEnd"/>


                <!-- Current Status -->
                <TextView
                    android:id="@+id/orderCurrentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="বর্তমান অবস্থা : অর্ডার"
                    android:textStyle="bold"
                    android:fontFamily="@font/kalpurush"
                    android:textSize="15sp"
                    android:textColor="#F44336"
                    android:textAlignment="textEnd"/>

            </LinearLayout>



            <!-- Amount -->
            <TextView
                android:id="@+id/orderAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳ ১২০০"
                android:textStyle="bold"
                android:fontFamily="@font/kalpurush"
                android:textSize="15sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="4dp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>